<h2>Signup</h2>
<% if (typeof errorMessage !== "undefined") { %>
  <div class="error-message"><%= errorMessage %></div>
<% } %>
<br><br>

<form action="/signup" method="post" id="form-container">
  <label for="firstName">First Name</label>
  <input id="firstName" type="text" name="firstName" placeholder="Jon">
  <br><br>

  <label for="lastName">Last Name</label>
  <input id="lastName" type="text" name="lastName" placeholder="Snow">
  <br><br>

  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow">
  <br><br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your Password">



  <button>Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</form>
