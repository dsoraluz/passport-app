<h1><%= title %></h1>
<p>Welcome to FaceBook</p>

<% if (successMessage.length > 0){ %>
  <p class="success">
    <%= successMessage %>
  </p>
<% } %>

<% if (userInfo){ %>
  <p>
    Welcome, <%= userInfo.firstName %>
  </p>
<% } %>

<% if(userInfo){ %>
  <a href="/secret"><button>Secret</button></a>
  <a href="/kgb-files"><button>KGB Files</button></a>
  <a href="/logout"><button>Log Out</button></a>
<% } else { %>
  <a href="/signup"><button>Sign Up</button></a>
  <a href="/login"><button>Log In</button></a>
  <a href="/auth/facebook"><button>Login With Facebook</button></a>
    <a href="/auth/google"><button>Login With Google +</button></a>

<% } %>
